  <script>
    // ---- UTM/QRパラメータの受取 → ローカルに保存 → 全リンクへ引き継ぎ ----
    (function(){
      const params = new URLSearchParams(location.search);
      const known = ["src","sku","v","utm_source","utm_medium","utm_campaign"];
      // 保存（上書き優先）
      known.forEach(k=>{
        const val=params.get(k);
        if(val){ localStorage.setItem("utm_"+k, val); }
      });
      // A/B用の簡易ID（無ければ生成）
      let ab = localStorage.getItem("ab_id");
      if(!ab){ ab = Math.random().toString(36).slice(2,8); localStorage.setItem("ab_id",ab); }
      document.getElementById("abid").textContent = ab;

      // 表示ラベル
      const echo = known.map(k=>localStorage.getItem("utm_"+k)? `${k}=${localStorage.getItem("utm_"+k)}`:null).filter(Boolean).join("&");
      document.getElementById("utmEcho").textContent = echo || "(なし)";
      const srcLabel = localStorage.getItem("utm_src") || localStorage.getItem("utm_source") || params.get("src") || "thank you";
      document.getElementById("srcLabel").textContent = `原価ルアーに賛同ありがとうございます（from: ${srcLabel}）`;

      // 全外部リンクに付与
      const addParams = new URLSearchParams();
      known.forEach(k=>{
        const v = localStorage.getItem("utm_"+k);
        if(v) addParams.set(k, v);
      });
      if(addParams.toString()){
        document.querySelectorAll('a[href^="http"]').forEach(a=>{
          try{
            const u = new URL(a.href);
            // 既存のパラメータを壊さないように追記
            addParams.forEach((v,k)=>{ if(!u.searchParams.has(k)) u.searchParams.set(k,v); });
            // クリックイベント時に反映（動的生成サイト対策）
            a.addEventListener('click', (e)=>{
              a.href = u.toString();
            });
          }catch(_){}
        });
      }

      // クリック計測（gtagがあれば送る）
      function fire(label){
        if(typeof gtag==='function'){
          gtag('event','outbound_click',{event_category:'engagement',event_label:label});
        }
      }
      document.querySelectorAll('a[data-label]').forEach(a=>{
        a.addEventListener('click',()=>fire(a.dataset.label));
      });

      // 年号
      document.getElementById("year").textContent = new Date().getFullYear();
    })();
  </script>
